{
  "editor.formatOnSave": true, // 저장할 때 자동 포맷
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": [ // 어떤 언어에서 ESLint 적용할지
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],
  "prettier.requireConfig": true, // .prettierrc 있을 때만 적용되도록
  "editor.defaultFormatter": "esbenp.prettier-vscode", // 기본 포맷터를 Prettier로 지정
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
